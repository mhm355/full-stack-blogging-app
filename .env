# .env
# This file holds configuration and secrets for the Docker Compose setup.
# It is read by Docker Compose for variable substitution.

# --- Spring Boot App ---
SPRING_PROFILES_ACTIVE=mysql
JAVA_OPTS=-Xms256m -Xmx512m

# --- MySQL Database ---
MYSQL_DATABASE=twitterapp
MYSQL_USER=appuser
MYSQL_PASSWORD=apppass
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_PORT=3306

# --- SonarQube ---
SONARQUBE_DB_NAME=sonar
SONARQUBE_DB_USER=sonar
SONARQUBE_DB_PASSWORD=sonarpass

# --- Grafana ---
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
